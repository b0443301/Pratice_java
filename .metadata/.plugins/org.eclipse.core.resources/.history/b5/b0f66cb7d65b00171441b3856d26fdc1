import java.io.File;
import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.InputStream;
import java.io.SequenceInputStream;

public class combineFiles{
	public static void combineFiles(String args[]){
	try {
		SequenceInputStream sis;
		File outputFile;
		FileOutputStream out;

		String file1 = "D:\\SSLTEST\\CERT\\uca_1.cer";
		String file2 = "D:\\SSLTEST\\CERT\\uca_2.cer";
		String file3 = "D:\\SSLTEST\\CERT\\uca_1.cer";
		InputStream in0 = new FileInputStream(file1);
		InputStream in1 = new FileInputStream(file2);
		sis = new SequenceInputStream(in0, in1);
		outputFile = new File(file3);
		out = new FileOutputStream(outputFile);
		int c;
		while ((c = sis.read()) != -1) {
			//System.out.write(c);
			out.write(c);
		}
		sis.close();
		out.close();
		System.out.println("檔案合併完成");

	} catch (Exception ex) {
		System.out.println("檔案合併沒成功");

	}
}
}
