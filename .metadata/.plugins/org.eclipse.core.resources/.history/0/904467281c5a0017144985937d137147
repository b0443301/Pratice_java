import java.util.Scanner;

public class main {
	public static void main(String args[]) {
		Scanner scanner=new Scanner(System.in);
		int input=scanner.nextInt();
		Boolean isPrime = false;
	for(int i=1;i<1000;i++){
		input%=i;
		isPrime = true;
	}
	if(!isPrime){
		System.out.println(input);
	}else{
		System.out.println(input);
	}
	
	}
}
